FROM eclipse-temurin:17-jdk-alpine

# DB
ARG DB_URL
ARG DB_USERNAME
ARG DB_PASSWORD

ENV DB_URL=$DB_URL
ENV DB_USERNAME=$DB_USERNAME
ENV DB_PASSWORD=$DB_PASSWORD
# JWT
ARG JWT_SECRET_KEY

ENV JWT_SECRET_KEY=$JWT_SECRET_KEY
# REDIS
ARG REDIS_HOST
ARG REDIS_PORT
ARG REDIS_USERNAME
ARG REDIS_PASSWORD

ENV REDIS_HOST=$REDIS_HOST
ENV REDIS_PORT=$REDIS_PORT
ENV REDIS_USERNAME=$REDIS_USERNAME
ENV REDIS_PASSWORD=$REDIS_PASSWORD
# LOG
ARG LOG_ID
ARG LOG_PORT
ARG LOG_LEVEL

ENV LOG_IP=$LOG_IP
ENV LOG_PORT=$LOG_PORT
ENV LOG_LEVEL=$LOG_LEVEL
# KAFKA
ARG KAFKA_TEST
ARG KAFKA_BOOTSTRAP_SERVER
ARG KAFKA_TEST_USERNAME
ARG KAFKA_TEST_PASSWORD

ENV KAFKA_TEST=$KAFKA_TEST
ENV KAFKA_BOOTSTRAP_SERVER=$KAFKA_BOOTSTRAP_SERVER
ENV KAFKA_TEST_USERNAME=$KAFKA_TEST_USERNAME
ENV KAFKA_TEST_PASSWORD=$KAFKA_TEST_PASSWORD
# MONITOR CHAT BOT
ARG MONITOR_BOT_TOKEN
ARG MONITOR_BOT_CHAT_ID

ENV MONITOR_BOT_TOKEN=$MONITOR_BOT_TOKEN
ENV MONITOR_BOT_CHAT_ID=$MONITOR_BOT_CHAT_ID

VOLUME /tmp
COPY target/*.jar app.jar
ENTRYPOINT ["java","-jar","/app.jar"]
EXPOSE 9001
